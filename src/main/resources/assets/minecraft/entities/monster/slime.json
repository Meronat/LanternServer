    },
    "equipment": {
    },
    "ai": {
        "normal": [
            {
                "priority": 1,
                "type": "minecraft:slime_attack",
                "flags": [
                    "attack"
                ],
                "data": {
                },
                "run-concurrent-with": [
                    "*",
                    "! @flag movement"
                ]
            },
            {
                "priority": 2,
                "type": "minecraft:slime_hop",
                "flags": [
                    "movement"
                ],
                "run-concurrent-with": [
                    "*",
                    "! @flag attack",
                    "! minecraft:slime_attack"
                ]
            }
        ],
        "target": [
            {
                "priority": 1,
