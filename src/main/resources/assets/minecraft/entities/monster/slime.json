        },
        "properties": {
            "org.spongepowered.api.data.property.entity.EyeHeightProperty": "@ $data.slime_size * 0.625"
        }
    },
    "bounding-box": {
        "min": [ "@[u] $data.slime_size * -0.255", 0.0, "@[u] $data.slime_size * -0.255" ],
